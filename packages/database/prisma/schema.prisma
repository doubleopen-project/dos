generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

/// A source file or other file included in a package. The Files are uniquely identified by their
/// SHA256 hash value, and one File can be referenced by multiple FileTrees, which represent the
/// file's location in the context of one package.
model File {
  id         Int      @id @default(autoincrement())
  sha256     String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  scanStatus String
  scanner    String   @default("scancode-toolkit@32.0.4")

  filetrees          FileTree[]
  licenseFindings    LicenseFinding[]
  licenseConclusions LicenseConclusion[]
  copyrightFindings  CopyrightFinding[]
  scanIssues         ScanIssue[]
}

/// A package consisting of its source code files.
model Package {
  id                  Int      @id @default(autoincrement())
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  purl                String   @unique @default(dbgenerated())
  type                String
  name                String
  namespace           String?
  version             String?
  qualifiers          String?
  subpath             String?
  scanStatus          String
  declaredLicenseSPDX String?

  fileTrees       FileTree[]
  scannerJobs     ScannerJob[]
  pathExclusions  PathExclusion[]
  BulkConclusions BulkConclusion[]

  @@index([updatedAt])
}

/// File in the context of a package.
model FileTree {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  /// The path of the file in the package.
  path      String

  packageId Int
  package   Package @relation(fields: [packageId], references: [id])

  fileSha256 String
  file       File   @relation(fields: [fileSha256], references: [sha256])

  @@index([packageId])
  @@index([fileSha256])
}

/// A license finding in a file.
model LicenseFinding {
  id                               Int      @id @default(autoincrement())
  createdAt                        DateTime @default(now())
  updatedAt                        DateTime @updatedAt
  unprocessedLicenseExpressionSPDX String
  scanner                          String
  scannerConfig                    String

  fileSha256 String
  file       File   @relation(fields: [fileSha256], references: [sha256])

  licenseFindingMatches LicenseFindingMatch[]

  @@index([fileSha256])
}

/// A license finding match
model LicenseFindingMatch {
  id                Int      @id @default(autoincrement())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  startLine         Int
  endLine           Int
  score             Float
  licenseExpression String

  licenseFindingId Int
  licenseFinding   LicenseFinding @relation(fields: [licenseFindingId], references: [id], onDelete: Cascade)

  @@index([licenseFindingId])
}

/// A bulk conclusion that is used for handling multiple license conclusions in the same package at once.
model BulkConclusion {
  id                             Int      @id @default(autoincrement())
  createdAt                      DateTime @default(now())
  updatedAt                      DateTime @updatedAt
  pattern                        String?
  concludedLicenseExpressionSPDX String
  detectedLicenseExpressionSPDX  String?
  comment                        String?
  local                          Boolean  @default(false)

  packageId Int
  package   Package @relation(fields: [packageId], references: [id], onDelete: Cascade)

  curatorId String  @db.Uuid
  curator   Curator @relation(fields: [curatorId], references: [id])

  licenseConclusions LicenseConclusion[]
  clearanceGroups    ClearanceGroup_BulkConclusion[]

  @@index([packageId])
  @@index([updatedAt])
  @@index([curatorId])
}

/// A license conclusion.
model LicenseConclusion {
  id                             Int      @id @default(autoincrement())
  createdAt                      DateTime @default(now())
  updatedAt                      DateTime @updatedAt
  concludedLicenseExpressionSPDX String
  detectedLicenseExpressionSPDX  String?
  comment                        String?
  contextPurl                    String
  local                          Boolean  @default(false)

  fileSha256 String
  file       File   @relation(fields: [fileSha256], references: [sha256])

  curatorId String  @db.Uuid
  curator   Curator @relation(fields: [curatorId], references: [id])

  bulkConclusionId Int?
  bulkConclusion   BulkConclusion? @relation(fields: [bulkConclusionId], references: [id], onDelete: Cascade)

  clearanceGroups ClearanceGroup_LicenseConclusion[]

  @@index([fileSha256])
  @@index([bulkConclusionId])
  @@index([updatedAt])
  @@index([curatorId])
}

/// A copyright finding in a file.
model CopyrightFinding {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  startLine     Int
  endLine       Int
  copyright     String
  scanner       String
  scannerConfig String

  fileSha256 String
  file       File   @relation(fields: [fileSha256], references: [sha256])

  copyrightFindingCurations CopyrightFindingCuration[]

  @@index([fileSha256])
}

/// A curation of a copyright finding.
model CopyrightFindingCuration {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  copyright String

  copyrightFindingId Int
  copyrightFinding   CopyrightFinding @relation(fields: [copyrightFindingId], references: [id])

  @@index([copyrightFindingId])
}

/// A scan issue for file
model ScanIssue {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  severity      String
  message       String
  scanner       String
  scannerConfig String
  timeoutIssue  Boolean  @default(false)
  timeout       Int?

  fileSha256 String
  file       File   @relation(fields: [fileSha256], references: [sha256])

  @@index([fileSha256])
}

/// A path exclusion
model PathExclusion {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pattern   String
  reason    String
  comment   String?

  packageId Int
  package   Package @relation(fields: [packageId], references: [id], onDelete: Cascade)

  curatorId String  @db.Uuid
  curator   Curator @relation(fields: [curatorId], references: [id])

  clearanceGroups ClearanceGroup_PathExclusion[]

  @@index([packageId])
  @@index([updatedAt])
  @@index([curatorId])
}

/// A scanner job.
model ScannerJob {
  id               String   @id @default(uuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  state            String
  failureState     String?
  failureMessage   String?
  objectStorageKey String?
  timeout          Int?
  fileCount        Int?
  scanDuration     Float?

  packageId Int
  package   Package @relation(fields: [packageId], references: [id])

  parentId         String?
  parentScannerJob ScannerJob? @relation("RelatedScannerJobs", fields: [parentId], references: [id], onDelete: Restrict, onUpdate: Restrict)

  childScannerJobs ScannerJob[] @relation("RelatedScannerJobs")

  @@index([packageId])
  @@index([parentId])
}

/// A system issue that can be used to save information about errors in unexpected situations, so that the issue is easier and faster to investigate and fix.
model SystemIssue {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  severity  Severity @default(UNKNOWN)
  message   String
  details   String?
  errorCode String?
  info      Json?
  errorType String?
  resolved  Boolean  @default(false)
}

enum Severity {
  CRITICAL
  MODERATE
  LOW
  UNKNOWN
}

/// A session for authentication.
model Session {
  sid    String   @id
  expire DateTime
  sess   Json
}

model Curator {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String
  remoteId  String   @unique @db.Uuid

  bulkConclusions        BulkConclusion[]
  licenseConclusions     LicenseConclusion[]
  pathExclusions         PathExclusion[]
  clearanceGroupCurators ClearanceGroup_Curator[]
}

model ClearanceGroup {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String   @unique

  licenseConclusions ClearanceGroup_LicenseConclusion[]
  bulkConclusions    ClearanceGroup_BulkConclusion[]
  pathExclusions     ClearanceGroup_PathExclusion[]
  curators           ClearanceGroup_Curator[]
  apiTokens          ApiToken_ClearanceGroup[]
}

model ClearanceGroup_LicenseConclusion {
  clearanceGroupId    Int
  clearanceGroup      ClearanceGroup    @relation(fields: [clearanceGroupId], references: [id], onDelete: Cascade)
  licenseConclusionId Int
  licenseConclusion   LicenseConclusion @relation(fields: [licenseConclusionId], references: [id], onDelete: Cascade)

  @@id([clearanceGroupId, licenseConclusionId])
  @@index([clearanceGroupId])
  @@index([licenseConclusionId])
}

model ClearanceGroup_BulkConclusion {
  clearanceGroupId Int
  clearanceGroup   ClearanceGroup @relation(fields: [clearanceGroupId], references: [id], onDelete: Cascade)
  bulkConclusionId Int
  bulkConclusion   BulkConclusion @relation(fields: [bulkConclusionId], references: [id], onDelete: Cascade)

  @@id([clearanceGroupId, bulkConclusionId])
  @@index([clearanceGroupId])
  @@index([bulkConclusionId])
}

model ClearanceGroup_PathExclusion {
  clearanceGroupId Int
  clearanceGroup   ClearanceGroup @relation(fields: [clearanceGroupId], references: [id], onDelete: Cascade)
  pathExclusionId  Int
  pathExclusion    PathExclusion  @relation(fields: [pathExclusionId], references: [id], onDelete: Cascade)

  @@id([clearanceGroupId, pathExclusionId])
  @@index([clearanceGroupId])
  @@index([pathExclusionId])
}

model ClearanceGroup_Curator {
  clearanceGroupId Int
  clearanceGroup   ClearanceGroup @relation(fields: [clearanceGroupId], references: [id], onDelete: Cascade)
  curatorId        String         @db.Uuid
  curator          Curator        @relation(fields: [curatorId], references: [id], onDelete: Cascade)
  role             Role           @default(READER)

  @@id([clearanceGroupId, curatorId])
  @@index([clearanceGroupId])
  @@index([curatorId])
}

enum Role {
  WRITER
  READER
}

enum ApiScope {
  SCAN_DATA
  CLEARANCE_DATA
}

model ApiClient {
  id          String   @id @default(uuid()) @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @unique
  description String?

  apiTokens ApiToken[]
}

model ApiToken {
  id          String   @id @default(uuid()) @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tokenHash   String   @unique
  description String
  isActive    Boolean  @default(true)

  apiClientId String    @db.Uuid
  apiClient   ApiClient @relation(fields: [apiClientId], references: [id], onDelete: Cascade)

  scopes          ApiTokenScope[]
  clearanceGroups ApiToken_ClearanceGroup[]
}

model ApiTokenScope {
  apiTokenId String   @db.Uuid
  apiToken   ApiToken @relation(fields: [apiTokenId], references: [id], onDelete: Cascade)
  scope      ApiScope

  @@id([apiTokenId, scope])
  @@index([apiTokenId])
}

model ApiToken_ClearanceGroup {
  apiTokenId       String         @db.Uuid
  apiToken         ApiToken       @relation(fields: [apiTokenId], references: [id], onDelete: Cascade)
  clearanceGroupId Int
  clearanceGroup   ClearanceGroup @relation(fields: [clearanceGroupId], references: [id], onDelete: Cascade)
  rank             Int

  @@id([apiTokenId, clearanceGroupId])
  @@index([apiTokenId])
  @@index([clearanceGroupId])
}
