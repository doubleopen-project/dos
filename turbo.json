{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [".env"],
    "globalEnv": [
        "ADMIN_TOKEN",
        "ALLOWED_ORIGINS",
        "COOKIE_SECRET",
        "DATABASE_URL",
        "DB_CONCURRENCY",
        "DB_RETRIES",
        "DB_RETRY_INTERVAL",
        "DEFAULT_TIMEOUT",
        "DL_CONCURRENCY",
        "DOS_URL",
        "NEW_JOB_RETRIES",
        "NEW_JOB_RETRY_INTERVAL",
        "NEXT_PUBLIC_API_URL",
        "NODE_ENV",
        "ORT_TOKEN",
        "PORT",
        "REDIS_PW",
        "REDIS_URL",
        "RESCAN_SCHEDULE",
        "SA_TOKEN",
        "SCANCODE_FILES_IN_MEMORY",
        "SCANCODE_PROCESSES",
        "SCANNER_URL",
        "SERVER_TOKEN",
        "SESSION_SECRET",
        "SIZE_LIMIT_FOR_COMPRESSION",
        "SPACES_BUCKET",
        "SPACES_ENDPOINT",
        "SPACES_KEY",
        "SPACES_SECRET",
        "TIMEOUT_MAX",
        "UL_CONCURRENCY",
        "UL_RETRIES",
        "UL_RETRY_INTERVAL",
        "WEB_CONCURRENCY"
    ],
    "pipeline": {
        "api:build": {
            "dependsOn": [
                "db:generate",
                "s3-helpers:build",
                "common-helpers:build",
                "validation-helpers:build"
            ]
        },
        "curation:build": {
            "dependsOn": ["validation-helpers:build"]
        },
        "scanner-agent:build": {
            "dependsOn": [
                "s3-helpers:build",
                "common-helpers:build",
                "validation-helpers:build"
            ]
        },
        "scanner-worker:build": {
            "dependsOn": ["s3-helpers:build", "common-helpers:build"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "clever-cfe-prebuild": {},
        "clever-logs": {},
        "copy-types": {},
        "db:format": {},
        "db:generate": {
            "cache": false
        },
        "db:migrate:deploy": {},
        "db:migrate:dev": {},
        "db:push": {
            "cache": false
        },
        "dev:api": {
            "dependsOn": ["^db:generate"]
        },
        "dev": {
            "dependsOn": ["^build", "^db:generate"],
            "cache": false,
            "persistent": true
        },
        "lint": {
            "cache": false
        },
        "start": {},
        "test": {
            "cache": false,
            "dependsOn": ["^db:generate"]
        },
        "worker": {
            "dependsOn": ["^build"]
        }
    }
}
