{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": ["PORT", "REDIS_URL", "WEB_CONCURRENCY", "SCANNER_URL", "DOS_URL", "SPACES_ENDPOINT", "SPACES_KEY", "SPACES_SECRET"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "worker": {
      "dependsOn": ["^build"]
    },
    "build:worker": {
      "dependsOn": ["^build"]
    }
  }
}