{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": ["PORT", "REDIS_URL", "WEB_CONCURRENCY", "SCANNER_URL", "DOS_URL", "SPACES_ENDPOINT", "SPACES_KEY", "SPACES_SECRET", "SPACES_BUCKET"],
  "pipeline": {
    "api:build": {
      "dependsOn": ["s3-helpers:build"]
    },
    "scanner-agent:build": {
      "dependsOn": ["s3-helpers:build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate:deploy": {},
    "db:push": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build", "^db:generate"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "worker": {
      "dependsOn": ["^build"]
    }
  }
}