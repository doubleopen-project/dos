{
    "private": true,
    "name": "dos-monorepo",
    "version": "0.0.0",
    "license": "MIT",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "build:api": "turbo run build --filter=api --no-daemon",
        "build:cfe": "turbo run build --filter=curation_front_end --no-daemon",
        "build:scanner_agent": "turbo run build --filter=scanner-agent --no-daemon",
        "build:scanner_worker": "turbo run build --filter=scanner-worker --no-daemon",
        "build:validation": "turbo run build --filter=validation-helpers --no-daemon",
        "build:s3": "turbo run build --filter=s3-helpers --no-daemon",
        "clever-logs-api": "turbo run clever-logs --filter=api --no-daemon",
        "clever-logs-cfe": "turbo run clever-logs --filter=curation_front_end --no-daemon",
        "clever-logs-sa": "turbo run clever-logs --filter=scanner-agent --no-daemon",
        "clever-cfe-prebuild": "turbo run clever-cfe-prebuild --no-daemon",
        "copy-types": "turbo run copy-types",
        "db:format": "turbo run db:format",
        "db:generate": "turbo run db:generate",
        "db:migrate:dev": "prisma migrate dev --schema ./packages/database/prisma/schema.prisma",
        "db:migrate:deploy": "prisma migrate deploy --schema ./packages/database/prisma/schema.prisma",
        "db:migrate:reset": "dotenv -- turbo run db:migrate:reset",
        "db:push": "turbo run db:push",
        "db:push-accept-data-loss": "prisma db push --schema ./packages/database/prisma/schema.prisma --accept-data-loss",
        "db:studio": "prisma studio --schema ./packages/database/prisma/schema.prisma",
        "clean": "npm exec --workspaces -- npx rimraf node_modules && npx rimraf package-lock.json && npx rimraf node_modules",
        "clean-build": "npm run clean-dist && turbo run build --no-cache --force",
        "clean-dist": "npm exec --workspaces -- npx rimraf dist",
        "clean-install": "npm run clean && npm install",
        "clean-turbo": "npm exec --workspaces -- npx rimraf .turbo",
        "clean-up": "npm run clean-turbo && npm run clean-dist && npm run clean",
        "dev": "turbo run dev --no-cache --continue --no-daemon --concurrency=12",
        "dev:api": "turbo run dev --no-cache --continue --no-daemon --filter=api",
        "dev:curation": "turbo run dev --no-cache --continue --no-daemon --filter=curation_front_end",
        "dev:scanner_agent": "turbo run dev --no-cache --continue --no-daemon --filter=scanner-agent",
        "lint": "turbo run lint",
        "lint:cfe": "turbo run lint --filter=curation_front_end",
        "prettier": "prettier --write .",
        "production:curation": "turbo run start --filter=curation_front_end --no-daemon",
        "start:api": "turbo run dev --no-cache --continue --no-daemon --filter=api",
        "start:curation": "turbo run dev --no-cache --continue --no-daemon --filter=curation_front_end",
        "start:scanner_agent": "turbo run dev --no-cache --continue --no-daemon --filter=scanner-agent",
        "start:scanner_worker": "turbo run dev --no-cache --continue --no-daemon --filter=scanner-worker",
        "test": "turbo run test --concurrency=1",
        "test:api": "turbo run test --filter=api",
        "test:scanner_agent": "turbo run test --filter=scanner-agent",
        "test:cfe": "turbo run test --filter=curation_front_end",
        "test:cfe:watch": "turbo run test:watch --filter=curation_front_end"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
        "prettier": "3.1.0",
        "rimraf": "5.0.5",
        "turbo": "1.10.16",
        "dotenv-cli": "^7.3.0"
    },
    "engines": {
        "node": "18.15.0",
        "npm": "9.5.0"
    },
    "packageManager": "npm@9.5.0",
    "overrides": {
        "formidable": "1.2.6"
    }
}
