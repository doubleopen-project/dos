{
    "name": "dos-monorepo",
    "version": "0.0.0",
    "license": "MIT",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build:client": "turbo run build --filter=client --no-daemon",
        "build:scanner_agent": "turbo run build --filter=scanner-agent --no-daemon",
        "build:api": "turbo run build --filter=api --no-daemon",
        "build:worker": "turbo run build:worker --no-daemon",
        "heroku-postbuild": "if [ $CLIENT_ENV ]; then npm run prod-client; elif [ $SERVER_ENV ]; then npm run prod-api; elif [ $SCANNER_ENV ]; then npm run prod-scanner_agent; else echo no environment detected, please set CLIENT_ENV, SERVER_ENV, or SCANNER_ENV; fi",
        "prod-client": "npm run build:client",
        "prod-scanner_agent": "npm run build:scanner_agent && npm run build:worker",
        "prod-api": "npm run build:api",
        "build": "turbo run build",
        "clean": "npm exec --workspaces -- npx rimraf node_modules && npx rimraf package-lock.json && npx rimraf node_modules",
        "dev": "turbo run dev --no-cache --continue --no-daemon",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "lint:fix": "turbo run lint:fix",
        "lint:report": "turbo run lint:report",
        "lint": "turbo run lint",
        "start:api": "turbo run dev --no-cache --continue --no-daemon --filter=api",
        "start:scanner_agent": "turbo run dev --no-cache --continue --no-daemon --filter=scanner-agent",
        "start:scanner_worker": "turbo run worker --no-cache --continue --no-daemon --filter=scanner-agent"
    },
    "devDependencies": {
        "rimraf": "^5.0.0",
        "turbo": "^1.8.8"
    },
    "engines": {
        "node": "18.15.0",
        "npm": "9.5.0"
    },
    "packageManager": "npm@9.5.0",
    "dependencies": {
        "cross-fetch": "^3.1.5"
    }
}
